{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/visual-studio-code-extensions/helm-table-visualizer"
			],
			"outFiles": [
				"${workspaceFolder}/visual-studio-code-extensions/helm-table-visualizer/dist/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}",
      "cwd": "${workspaceFolder}/visual-studio-code-extensions/helm-table-visualizer"
		}
	]
}
