{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/naming-convention": [
      "warn",
      {
        "selector": "import",
        "format": [
          "camelCase",
          "PascalCase"
        ]
      }
    ],
    "@typescript-eslint/semi": "off",
    "curly": "warn",
    "eqeqeq": "off",
    "no-throw-literal": "warn",
    "semi": "off",
    "comma-dangle": "off",
    "@typescript-eslint/comma-dangle": "off"
  },
  "ignorePatterns": [
    "out",
    "dist",
    "**/*.d.ts",
    "src-webview/**"
  ]
}
